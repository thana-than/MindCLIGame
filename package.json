{
  "name": "terminal-void",
  "description": "A game about space travel, communication, and command line.",
  "main": "index.html",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel watch:server watch:browser",
    "dev": "python build_gameFolders.py --dev",
    "build": "python build_gameFolders.py",
    "watch:server": "nodemon --watch gameFolders -e * --exec  npm run dev",
    "watch:browser": "browser-sync start --server --files \"*.html, *.js, *.css,css/*.css, js/*.js, *.json\""
  },
  "devDependencies": {
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "browser-sync": "^3.0.2",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.0.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "release.zip",
              "label": "Release"
            }
          ]
        }
      ]
    ]
  },
  "author": "ThanaThan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thana-than/MindCLIGame.git"
  },
  "bugs": {
    "url": "https://github.com/thana-than/MindCLIGame/issues"
  },
  "homepage": "https://github.com/thana-than/MindCLIGame#readme"
}